<odoo>
  <data>
    <!-- form view -->
    <record id="view_sales_report_form" model="ir.ui.view">
        <field name="name">sales.report.form</field>
        <field name="model">sales.report</field>
        <field name="arch" type="xml">
            <form string="Generate Report">
                <!-- <header>
                    <button string="Generate" name="action_generate_report" type="object" class="oe_highlight"/> 
                </header> -->
                <sheet>
                    <group string="Generate Report">
                        <field name="vit_date_from"/>
                        <field name="vit_date_to"/>
                        <field name="vit_invoice_no"/>
                        <field name="vit_sales_detail"/>
                        <field name="vit_sales_recap"/>
                        <field name="vit_sales_spending"/>
                        <field name="vit_sales_hourly"/>
                    </group>
                </sheet>
                <!-- <footer>
                    <button name="action_generate_report" string="Print" type="object" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel" />
                </footer> -->
            </form>
        </field>
    </record>

    <!-- actions -->
    <record id="action_generate_sales_report" model="ir.actions.act_window">
        <field name="name">Generate Sales Report</field>
        <field name="res_model">sales.report</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

    <!-- Child Menu -->
    <menuitem
        id="sales_report_menu"
        name="Sales Report"
        action="action_generate_sales_report"
        parent="point_of_sale.menu_point_root"
        sequence="10"/>
  </data>
</odoo>
