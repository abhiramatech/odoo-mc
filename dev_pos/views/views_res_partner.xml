<odoo>
  <data>

    <record model="ir.ui.view" id="view_res_partner_form_inherit">
      <field name="name">res.partner.form.inherit</field>
      <field name="model">res.partner</field>
      <field name="inherit_id" ref="base.view_partner_form"/>
      <field name="arch" type="xml">
        <xpath expr="//field[@name='category_id']" position="after">
            <field name="customer_code" readonly="1"/>
            <field name="is_integrated" readonly="1"/>
            <field name="index_store" widget="many2many_tags" readonly="1"/>
        </xpath>
        
        <!-- Field yang bisa diubah dan log ke chatter -->
        <xpath expr="//field[@name='phone']" position="attributes">
          <attribute name="force_save">1</attribute>
        </xpath>
        
        <xpath expr="//field[@name='category_id']" position="attributes">
          <attribute name="force_save">1</attribute>
        </xpath>
        
        <xpath expr="//field[@name='customer_code']" position="attributes">
          <attribute name="force_save">1</attribute>
        </xpath>
        
        <xpath expr="//field[@name='index_store']" position="attributes">
          <attribute name="force_save">1</attribute>
        </xpath>
      </field>
    </record>

   <!-- Tree View untuk Customer Group -->
    <record model="ir.ui.view" id="view_customer_group_tree">
      <field name="name">customer.group.tree</field>
      <field name="model">customer.group</field>
      <field name="arch" type="xml">
        <tree string="Customer Groups">
          <field name="name"/>
          <field name="vit_group_name" string="Group"/>
          <field name="vit_pricelist_id" string="Pricelist"/>
        </tree>
      </field>
    </record>

    <!-- Form View untuk Customer Group -->
    <record model="ir.ui.view" id="view_customer_group_form">
      <field name="name">customer.group.form</field>
      <field name="model">customer.group</field>
      <field name="arch" type="xml">
        <form string="Customer Group">
          <sheet>
            <group>
              <group>
                <field name="name" string="Group Name"/>
                <field name="vit_group_name" string="Group" tracking="True"/>
              </group>
              <group>
                <field name="vit_pricelist_id" string="Pricelist" tracking="True"/>
              </group>
            </group>
          </sheet>
          <div class="oe_chatter">
            <field name="message_follower_ids"/>
            <field name="activity_ids"/>
            <field name="message_ids"/>
          </div>
        </form>
      </field>
    </record>

    <!-- Action untuk Customer Group -->
    <record model="ir.actions.act_window" id="action_customer_group">
      <field name="name">Customer Groups</field>
      <field name="res_model">customer.group</field>
      <field name="view_mode">tree,form</field>
      <field name="context">{'search_default_group': 1}</field>
      <field name="help" type="html">
        <p class="o_view_nocontent_smiling_face">
          Create your first customer group!
        </p>
      </field>
    </record>

    <!-- Menu untuk Customer Group dalam Contacts Configuration -->
    <menuitem 
        id="menu_customer_group" 
        name="Customer Groups" 
        parent="contacts.res_partner_menu_config" 
        action="action_customer_group" 
        sequence="10"/>

  </data>
</odoo>